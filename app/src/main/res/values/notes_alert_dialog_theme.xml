<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColorAlertDialogListItem">@color/lt_purple</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:borderlessButtonStyle">@style/DialogButtonText</item>
    </style>
    
    <style name="DialogWindowTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DialogButtonText">
        <item name="android:textColor">@color/lt_purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>